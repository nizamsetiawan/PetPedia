<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Animals" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <style name="Theme.Animals" parent="Base.Theme.Animals" />

    <!-- General Text Style -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item> <!-- Default font -->
    </style>

    <!-- Headline Styles -->
    <style name="TextContent.HeadlineMedium" parent="TextContent">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="fontFamily">@font/manrope_medium</item> <!-- Font for headline -->
    </style>

    <style name="TextContent.HeadlineMedium.Bold" parent="TextContent.HeadlineMedium">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/manrope_semi_bold</item> <!-- Semi bold font -->
    </style>

    <!-- Title Styles -->
    <style name="TextContent.TitleMedium" parent="TextContent">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="fontFamily">@font/montserrat_medium</item> <!-- Font for title medium -->
    </style>

    <style name="TextContent.TitleMedium.Bold" parent="TextContent.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_black</item> <!-- Black font for bold titles -->
    </style>

    <style name="TextContent.TitleMedium.Bold.Light" parent="TextContent.TitleMedium.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.TitleLarge" parent="TextContent">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="fontFamily">@font/poppins_light</item> <!-- Light font for large titles -->
    </style>

    <style name="TextContent.TitleLarge.Bold" parent="TextContent.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item> <!-- Semi bold font -->
    </style>

    <!-- Body Styles -->
    <style name="TextContent.BodyMedium" parent="TextContent">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="fontFamily">@font/poppins_regular</item> <!-- Regular font -->
    </style>

    <style name="TextContent.BodyMedium.Gray" parent="TextContent.BodyMedium">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="TextContent.BodyMedium.White" parent="TextContent.BodyMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonGeneral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="fontFamily">@font/poppins_medium</item> <!-- Medium font for buttons -->
    </style>

    <style name="ButtonGeneral.SecondaryVariant" parent="ButtonGeneral">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_bold</item> <!-- Bold font for secondary buttons -->
    </style>
</resources>
